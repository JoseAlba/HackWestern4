<!DOCTYPE html>

<!-- REGISTER FOR THE APP HERE -->

<html>

    <%- include('partials/head') %>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1>Join the anti-terror comunity.</h1>
                    <a href="/">Login</a>
                </div>

                <% if (errors) { %>

                    <div class="errorBox">
                        <ul>
                            <% errors.forEach(function(error) { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>

                <% } %>

                <div class="col-sm-6 offset-sm-3 align-middle" style="display: inline;">
                    <br>
                    <h2 class="mx-auto" style="display: block; width: 100px;">Register</h2>
                    <form method="POST" action="/api/register">

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Phone Number</label>                       
                            <input type="tel" name="phone" class="form-control" placeholder="xxxxxxxxxx" required>
                            <small class="form-text text-muted">Your phone number is not shared. It is used only for notifications.</small>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </body>

</html>


<!doctype html>

<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>WebcamJS Test Page</title>
    <style type="text/css">
        body {
            font-family: Helvetica, sans-serif;
        }

        h2,
        h3 {
            margin-top: 0;
        }

        form {
            margin-top: 15px;
        }

        form>input {
            margin-right: 15px;
        }

        #results {
            float: right;
            margin: 20px;
            padding: 20px;
            border: 1px solid;
            background: #ccc;
        }
    </style>
    <script src="http://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>
</head>

<body>

    <audio id="alarm">
        <source src="/alarm.mp3" />
    </audio>

    <div id="my_camera"></div>

    <!-- First, include the Webcam.js JavaScript Library -->
    <script type="text/javascript" src="/javascripts/webcam.min.js"></script>

    <!-- Configure a few settings and attach camera -->
    <script language="JavaScript">
        var w = window.innerWidth;
        var h = window.innerHeight;
        Webcam.set({
            width: 1200,
            height: 700,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('#my_camera');
    </script>

    <button id="toggle"> Start Search </button>
    <!-- <button id="tmp"> text </button> -->
    <button id="disbleAlarm">Disable Alarm</button>

    <!-- A button for taking snaps -->
    <!-- <form id="picForm">
        <input type=button value="Take Snapshot">
    </form> -->

    <br>
    <h1 id="banana">Terrorist Threat Level: 0%</h1>
    <b id="threat-text" style="font-size: 50px; color: red; position: absolute; top: 0;"><h1>Terrorist threat!</h1></b>

    <!-- Code to handle taking the snapshot and displaying it locally -->
    <script language="JavaScript">
        $(document).ready(function(){
            $('#threat-text').css("visibility", "hidden");            
            var toggleFlag = false;
            var interval = null;
            var banana = -1;
            var hand = -1;
            var audioInt;


            $('#disbleAlarm').on('click', function(){
                clearInterval(audioInt);                
                $('#alarm').trigger("pause");
                $('#threat-text').css("visibility", "hidden");
            })

            $('#toggle').on('click', function(){
                if (toggleFlag == false){
                    toggleFlag = true;
                }
                else{
                    toggleFlag = false;
                }

                if (toggleFlag) {
                    interval = setInterval(function () {
                        snap2();
                    }, 1000);
                }
                else {
                    console.log("stopped...");
                    clearInterval(interval);
                }
            });

            

            var snap = function(){
                 Webcam.snap(function (data_uri) {
                    $.post("/api/get_pic", { uri: data_uri }, function (data, status) {
                        obj = JSON.parse(data);
                        console.log('\n\n------');
                        
                        obj.images[0].classifiers[0].classes.forEach(function (c) {
                            console.log(c);                            
                        });    

                        console.log('------\n\n');                        
                    });
                });
            }

            var threatExceed = false;

            var snap2 = function () {
                Webcam.snap(function (data_uri) {
                    $.post("/api/get_pic_no_watson", { uri: data_uri }, function (data, status) {
                        obj = data;
                        var threat = obj.images[0].classifiers[0].classes[0].score;

                        if(threatExceed){
                            threat = 1;
                            threatExceed = !threatExceed;
                        }

                        $('#banana').text("Terrorist Threat Level: " + (threat*100).toFixed(1) + "%");                        

                        if (threat > 0.65 && threat < 1) {
                            console.log("TERRORIST ALERT!!!");
                            $('#threat-text').css("visibility", "visible");

                            audioInt = setInterval(function(){
                                $('#alarm').trigger("play");
                            }, 1000);

                            // $.post("/api/send_text", function(data, status) {
                            //     console.log("text sent!");
                            // });
                        }
                        else if(threat >= 1){
                            threatExceed = true;
                        }

                    });
                });
            }

            $('#picForm').on('click', function(){
                snap();
            });



        })

    </script>

</body>

</html>